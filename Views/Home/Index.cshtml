@{
    ViewData["Title"] = "Home Page";
}

@model IndexViewModel

<!--Team Name Header-->
<h2>@Model.TeamName</h2>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
            <th>Phone Number</th>
        </tr>
    </thead>
    <!--Loop list of Bowlers-->
    <tbody>
        @foreach (var x in Model.Bowlers)
        {
        <tr>
            <td>@x.BowlerFirstName @x.BowlerMiddleInit @x.BowlerLastName</td>
            <td>@x.BowlerAddress</td>
            <td>@x.BowlerCity</td>
            <td>@x.BowlerState</td>
            <td>@x.BowlerZip</td>
            <td>@x.BowlerPhoneNumber</td>
        </tr>
        }
    </tbody>
</table>
<!--Pagination-->
<div page-info="@Model.PageNumberingInfo" page-url-teamname="@Model.TeamName"
     page-classes-enabled="true" page-class="btn"
     page-class-normal="btn-outline-dark" page-class-selected="btn-primary"
     class="btn-group pull-right m-1">

</div>